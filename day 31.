274. H-Index
  
Topic - Array, Sorting

-Code Implementation.

-----------------------------------------------------------------------
class Solution {
public:
    int hIndex(vector<int>& citations) {
        sort(citations.begin(), citations.end());
        int n = citations.size();
        int h = 0;
        for(int i = n - 1; i >= 0; i--){
            int papersWithAtLeastThis = n - i;
            if(citations[i] >= papersWithAtLeastThis){
                h = papersWithAtLeastThis;
            }else{
                break;
            }
        }return h;
    }
};
